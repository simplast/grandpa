{
  "name": "@grandpa/cli",
  "version": "0.1.0",
  "description": "CLI application entry point",
  "type": "module",
  "bin": {
    "grandpa": "./dist/index.js"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "lint": "eslint src --ext .ts",
    "dev": "bun run ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist node_modules",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@grandpa/core": "workspace:*",
    "@grandpa/config": "workspace:*",
    "@grandpa/server": "workspace:*",
    "@grandpa/ai": "workspace:*",
    "commander": "^13.0.0",
    "chalk": "^5.4.1",
    "ora": "^8.1.1",
    "inquirer": "^12.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "tsup": "^8.3.5"
  }
}
