{
  "name": "@grandpa/config",
  "version": "0.1.0",
  "description": "Configuration management for the CLI application",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "files": ["src"],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "zod": "^3.24.1",
    "dotenv": "^16.4.7",
    "conf": "^13.0.1"
  },
  "devDependencies": {
    "tsup": "^8.3.5"
  }
}